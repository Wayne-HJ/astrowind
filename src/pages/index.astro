---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';

const metadata = {
  title: 'ICHINGWALKER — Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement" />
  <Fragment slot="header" />
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get template',
        href: 'https://github.com/arthelokyo/astrowind',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'ICHINGWALKER Hero Image' }}
  >
    <Fragment slot="title">
      Fatbox AI Official Website – Under Construction
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        This site is developed and operated by IChing Walkers Australia Pty Ltd (ABN: 15 643 251 192).
      </span>
      <span>Our company is currently focused on two core projects:</span>
      <span>1.	Fatbox AI – a personalized AI avatar platform, enabling professionals and creators to expand their services and business through automation.</span>
      <span>2.	MingEase – a human-like AI chat application, scheduled for release on the App Store and Google Play in 2026.</span>
      <span>Our products are in the R&D stage, and the website will be officially launched in early 2026.</span>
      
      
      
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Contact:" description="ozbayiba@gmail.com" />
</Layout>
